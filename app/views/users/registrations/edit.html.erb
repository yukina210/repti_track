<div class="main-content-without-slidebar">
  <div class="logo0">
    <%= image_tag 'logo0.png', class: 'form_logo' %>
  </div>

<div class="container">
<h2><%= t('users.edit.edit') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label t('users.new.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('users.edit.currently_waiting_confirmation_for') %>: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label t('users.edit.password') %><i>(<%= t('users.edit.leave_blank_if_you_dont_want_to_change_it') %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label t('users.edit.password_confirmation') %><i>(<%= t('users.edit.leave_blank_if_you_dont_want_to_change_it') %>)</i><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label t('users.edit.current_password') %> <i>(<%= t('users.edit.we_need_your_current_password_to_confirm_your_changes') %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit t('users.edit.submit'), class: "btn btn-primary" %>
  </div>
<% end %>

<h3><%= t('users.edit.cancel_my_account') %></h3>

<div><%= t('users.edit.unhappy') %> <%= button_to t('users.edit.cancel_my_account'), registration_path(resource_name), data: { confirm: t('users.edit.are_you_sure'), turbo_confirm: t('users.edit.are_you_sure') }, method: :delete %></div>

<%= link_to t('users.edit.goback'), :back %>

</div>
</div>

