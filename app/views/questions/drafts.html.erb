<div class="main-content-draft">

<h1>下書き一覧</h1>

<% if @drafts.any? %>
  <ul class="drafts-list">
    <% @drafts.each do |draft| %>
      <li class="draft-item">
        <%= link_to draft.title, edit_question_path(draft), class: 'draft-title' %>
        <%= link_to question_path(draft), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'draft-delete' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>下書きはありません。</p>
<% end %>

</div>

<style>
  .main-content-draft {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .main-content-draft h1 {
    font-size: 2em;
    margin-bottom: 20px;
  }

  .drafts-list {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  .draft-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    border-bottom: 1px solid #ccc;
  }

  .draft-title {
    font-size: 1.2em;
    text-decoration: none;
    color: #333;
  }

  .draft-title:hover {
    text-decoration: underline;
  }

  .draft-delete {
    color: #ff0000;
    text-decoration: none;
  }

  .draft-delete:hover {
    color: #cc0000;
  }

  .fa-trash-alt {
    font-size: 1.2em;
  }
</style>
