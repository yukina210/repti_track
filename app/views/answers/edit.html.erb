<div class="main-content-without-slidebar">

<div class="container">
  <%= form_with model: [@question, @answer], local: true do |f| %>
    <div class="answer-edit-field">
      <h3>回答を編集する</h3>
      <%= f.text_area :content, class: "answer-content" %>
    </div>
    <div class="actions">
      <%= f.submit '更新する', class: 'btn btn-primary' %>
      <%= link_to '戻る', question_path(@question), class: 'btn btn-secondary' %>
    </div>
  <% end %>
<div>
</div>
